[MASTER]

# A comma-separated list of package or module names from where C extensions may
# be loaded. Extensions are loading into the active Python interpreter and may
# run arbitrary code.
extension-pkg-whitelist=

# Add files or directories matching the regex patterns to the blacklist. The
# regex is matched against the full path. The default excludes the
# .git, __pycache__, dist, build, and .tox directories.
ignore-patterns=.*\.pyc,.*\.pyo,.*\.pyi,.*__pycache__

# Files or directories matching the regex patterns are skipped. The regex
# matches against base names, not paths.
ignore-paths=

# Pickle collected data for later comparisons.
persistent=yes

# List of plugins (as comma separated strings of python module names) to load,
# usually to register additional checkers.
load-plugins=

# Use multiple processes to speed up Pylint. Specifying 0 will auto-detect the
# number of processors available to use, and 1 will disable multiprocessing.
jobs=1

# Allow loading of arbitrary C extensions. Extensions are imported into the
# active Python interpreter and may run arbitrary code.
unsafe-load-any-extension=no

# Enable Pylint extensions that are part of standard library
# (e.g., 'pylint.extensions.check_rais', 'pylint.extensions.bad_builtin')
# to be used when checking for problems.
# The list is a comma-separated list of strings.
# Example: 'pylint.extensions.check_rais,pylint.extensions.bad_builtin'
# This option conflicts with 'load-plugins' option.
# pylint-extensions=

[MESSAGES CONTROL]

# Only show warnings with the configured confidence levels. Leave empty to show
# all. Levels are: HIGH, INFERENCE, INFERENCE_FAILURE, UNDEFINED.
confidence=

# Disable the message, report, category or checker with the given id(s). You
# can either give multiple identifiers separated by comma (,) or put the
# options multiple times (each on the command line it will be parsed as a
# comma separated list). You can also use "--disable=all" to disable everything
# first and then re-enable specific checks. For example, you may want to
# disable all checks related to convention, and then re-enable only the ones
# you want in your project.
disable=
    missing-module-docstring,      # C0114 - We'll handle docs separately
    too-few-public-methods,       # R0903 - Common in game classes
    invalid-name,                 # C0103 - Game variables often use short names
    too-many-instance-attributes, # R0902 - Game classes often need many attributes
    no-member,                     # E1101 - PyGame members sometimes not detected
    missing-class-docstring,       # C0115 - We'll handle docs separately
    missing-function-docstring,   # C0116 - We'll handle docs separately
    unused-variable,              # W0612 - Common in game development
    broad-exception-caught,        # W0718 - Game code often catches broad exceptions
    wrong-import-order,           # C0411 - We'll handle imports separately
    ungrouped-imports,             # C0412 - We'll handle imports separately
    unused-import,                 # W0611 - Common in game development
    unused-wildcard-import,        # W0614 - Common in game development
    line-too-long,                 # C0301 - Black handles this

# Enable the message, report, category or checker with the given id(s). You can
# either give multiple identifier separated by comma (,) or put the options
# multiple time (only on the command line, not in the configuration file) to
# enable several checks at once.
enable=

[REPORTS]

# Set the output format. Available formats are text, parseable, colorized, json
# and msvs (visual studio). You can also give a reporter class, e.g.
# mypackage.mymodule.MyReporterClass.
output-format=text

# Tells whether to display a full report or only the messages.
reports=no

[REFACTORING]

# Maximum number of nested blocks for function / method body
max-nested-blocks=5

[FORMAT]

# Maximum number of characters on a single line.
max-line-length=88

# Regexp for a line that is allowed to be longer than the limit.
ignore-long-lines=^.*\b(?<!https?://)\S+\.(?:png|jpg|jpeg|gif|bmp|svg)\b.*$

# Allow the body of a class to be on the same line as the declaration if body
# contains only a 'pass' statement or a single line docstring.
single-line-class-stmt=no

# Allow the body of an if, elif, else, for, while, try, except, with,
# def or class to be on the same line as the header if the body is only a
# single simple statement.
single-line-if-stmt=no

# Number of spaces of indentation required inside a hanging or continued
# indentation.
indent-after-paren=4

# String used as indentation unit. This is usually "    " (4 spaces) or "\t" (1
# tab).
indent-string='    '

[BASIC]

# Good variable names which should always be accepted, separated by a comma.
good-names=i,j,k,x,y,z,ex,fp,_,_tmp

# Bad variable names which should always be refused, separated by a comma.
bad-names=

# List of builtins function names that should not be used, separated by a comma.
bad-functions=

# Regular expression matching correct function names
function-rgx=^[a-z_][a-z0-9_]{2,30}$

# Regular expression matching correct variable names
variable-rgx=^[a-z_][a-z0-9_]{2,30}$

# Regular expression matching correct constant names
const-rgx=^(_?[A-Z][A-Z0-9_]{2,30}|__[A-Z][A-Z0-9_]{2,30}__)$

# Regular expression matching correct attribute names
attr-rgx=^[a-z_][a-z0-9_]{2,30}$

# Regular expression matching correct argument names
argument-rgx=^[a-z_][a-z0-9_]{2,30}$

# Regular expression matching correct class attribute names
class-attribute-rgx=^[a-z_][a-z0-9_]{2,30}$

# Regular expression matching correct inline iteration names
inlinevar-rgx=^[A-Za-z_][A-Za-z0-9_]*$

# Regular expression matching correct class names
class-rgx=^[A-Z_][a-zA-Z0-9]{2,30}$

# Regular expression matching correct module names
module-rgx=^(_?[a-z_][a-z0-9_]{2,30}|__init__)$

# Regular expression matching correct method names
method-rgx=^[a-z_][a-z0-9_]{2,30}$

# Regular expression which should only match function or class names that do
# not require a docstring.
no-docstring-rgx=^_

# Minimum line length for functions/classes that require docstrings, shorter
# ones are exempt.
docstring-min-length=-1

[TYPECHECK]

# List of decorators that produce context managers from functions.
contextmanager-decorators=contextlib.contextmanager

# List of member names, which should be excluded from the member access checks.
# This is useful for libraries where you have "private" members that are
# accessed through property or other descriptors.
ignored-classes=

# List of module names for which member access should be treated as safe.
# This is useful for libraries where you have "private" members that are
# accessed through property or other descriptors.
ignored-modules=

# List of method names that do not require a "self" parameter.
# This is useful for libraries where you have "private" methods that are
# accessed through property or other descriptors.
defining-attr-methods=__init__,__new__

# List of names that are allowed to shadow builtins
shadowed-builtins=

[MISCELLANEOUS]

# List of note tags to take in consideration, separated by a comma.
notes=

[LOGGING]

# Logging modules to insert into the logging configuration.
logging-modules=logging

[VARIABLES]

# Tells whether we should check for unused import in __init__ files.
init-import=no

# A regular expression matching the name of dummy variables (i.e. expected to
# not be used).
dummy-variable-rgx=^_|dummy

# List of variable names that should not be used.
bad-names=

# List of names that are allowed to shadow builtins
shadowed-builtins=

# List of optional variables that can be used in the construction of the
# regular expression.
additional-builtins=

[CLASSES]

# List of method names that do not require a "self" parameter.
defining-attr-methods=__init__,__new__

# List of valid names for the first argument in a class method.
valid-classmethod-first-arg=cls

[DESIGN]

# Maximum number of arguments for function / method.
max-args=7

# Maximum number of locals for function / method body.
max-locals=15

# Maximum number of return / yield for function / method body.
max-returns=6

# Maximum number of branch for function / method body.
max-branches=12

# Maximum number of statements in function / method body.
max-statements=50

# Maximum number of parents for a class (see R0901).
max-parents=7

# Maximum number of attributes for a class (see R0902).
max-attributes=7

# Minimum number of public methods for a class (see R0903).
min-public-methods=2

# Maximum number of public methods for a class (see R0904).
max-public-methods=20

# Maximum number of boolean expressions in a if statement (see R0916).
max-bool-expr=5

[IMPORTS]

# Allow wildcard imports from modules that define __all__.
allow-wildcard-with-all=no

# Analyse import fallback blocks. This can be used to support both Python 2 and
# 3 compatible code, which means that the block might have code that exists
# only in one version and is alternative using import fallback blocks.
analyse-fallback-blocks=no

# Deprecated modules which should not be used, separated by a comma.
deprecated-modules=

# Create a graph of external dependencies in the given file (report
# RP0402 must not be disabled).
import-graph=

# Add files or directories matching the regex patterns to the blacklist. The
# regex is matched against the full path. The default excludes the
# .git, __pycache__, dist, build, and .tox directories.
ext-import-graph=

# Create a graph of every (i.e. internal and external) dependencies in the
# given file (report RP0402 must not be disabled).
int-import-graph=

# Force import order to recognize a module as part of the standard
# library imports.
known-standard-library=

# Force import order to recognize a module as part of a third-party library.
known-third-party=

# Force import order to recognize a module as part of this project.
known-first-party=

# Force import order to recognize a module as part of a relative import.
known-relative-import=

# Analyse import fallback blocks. This can be used to support both Python 2 and
# 3 compatible code, which means that the block might have code that exists
# only in one version and is alternative using import fallback blocks.
analyse-fallback-blocks=no

[EXCEPTIONS]

# Exceptions that will emit a warning when being caught. Defaults to
# "Exception". If you want to catch all standard exceptions except for
# "Exception", you can configure "BaseException, KeyboardInterrupt,
# SystemExit, GeneratorExit, StopIteration".
overgeneral-exceptions=Exception

[STRING]

# This flag controls whether the implicit-str-concat-in-sequence feature
# should generate a violation on implicit concatenated string literals on
# the same line.
check-str-concat-over-line-jumps=no

# This flag controls whether the implicit-str-concat-in-sequence feature
# should generate a violation on implicit concatenated string literals on
# separate lines.
check-consistent-format-string=no

# This flag controls whether the format-string-checks feature should
# generate a violation on unescaped percent characters in format strings.
check-format-string=no
